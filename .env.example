# Google OAuth credentials — from GCP Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# The Google Chat space ID for your group chat.
# Find it via the Chat API or from the space URL:
#   https://mail.google.com/chat/u/0/#chat/space/XXXXXXXXX
# Format: spaces/XXXXXXXXX
GOOGLE_CHAT_SPACE_ID=spaces/XXXXXXXXX

# OAuth redirect URI — must match what's configured in GCP Console
OAUTH_REDIRECT_URI=http://localhost:3100/auth/callback

# Sidecar port
SIDECAR_PORT=3100

# Polling intervals (seconds)
POLL_ACTIVE_INTERVAL=30      # When agent is actively chatting
POLL_IDLE_INTERVAL=14400     # Background (4 hours)
POLL_DECAY_TIMEOUT=600       # Seconds of inactivity before decaying to idle
